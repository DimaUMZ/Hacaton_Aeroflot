# Определяем корневую директорию проекта
PROJECT_ROOT="/data/vscode/HacatonAeroflot/Aeroflot-project"

# Активация виртуального окружения
if [ -d "$PROJECT_ROOT/.venv" ]; then
    source "$PROJECT_ROOT/.venv/bin/activate"
    echo "✅ Виртуальное окружение Aeroflot активировано"
fi

# Добавление src директории в PYTHONPATH
export PYTHONPATH="$PROJECT_ROOT/src:$PYTHONPATH"

# Дополнительные настройки для Python
export PYTHONUNBUFFERED="1"
export PYTHONDONTWRITEBYTECODE="1"

# Явное указание имени окружения в приглашении
export VIRTUAL_ENV_PROMPT="(aeroflot)"